<div classs="container">
	<div class="row">
		<div class="col-md-7 col-md-offset-3">
		  <h2>会員詳細</h2>
		  <table class="table table-hover table-inverse">
		      <td>顧客ID</td>
              <td><%= @member.id %><span class="label label-primary"><%= @member.is_deleted %></span>
              </td>
            </tr>

            <tr>
              <td>氏名</td>
                <td><%= @member.first_name %>
                    <%= @member.last_name %>
                </td>
            </tr>

            <tr>
              <td>フリガナ</td>
                <td><%= @member.first_name_phonetic %>
                    <%= @member.last_name_phonetic %>
                </td>
             </tr>

            <tr>
              <td>郵便番号</td>
              <td><%= @member.postcode %></td>
            </tr>

            <tr>
              <td>住所</td>
              <td><%= @member.address %></td>
            </tr>

            <tr>
              <td>電話番号</td>
              <td><%= @member.telephone_number %></td>
            </tr>

            <tr>
              <td>メールアドレス</td>
              <td><%= @member.email %></td>
            </tr>
          </tbody>
        </table>
            <%= link_to "編集する", edit_admins_member_path, class: "btn btn-primary" %>
            <%= link_to "注文履歴一覧を見る", admins_order_details_path, class: "btn btn-primary" %>
    </div>

  </div>
</div>
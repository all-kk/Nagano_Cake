<div class="container">
	<h2>ジャンル編集</h2>
	<div class="row">
		<%= form_for @genre, url: admins_genre_path do |f| %>
	 		<%= f.label :ジャンル %>
	 	 	<%= f.text_field :name %>
	 	 	<label><%= f.radio_button :is_enabled, "有効" ,checked: "checked"%> 有効 </label>
	 	 	<label><%= f.radio_button :is_enabled, "無効" %> 無効</label>
	 	 	<%= f.submit "変更を保存する", class: "btn btn-primary" %>
	 	<% end %>
	</div>
</div>

<div class="container">
	 <div class="row">
	 	<h2>ジャンル一覧・追加</h2>

	 	<%= form_for @genre, url: admins_genres_path do |f| %>
	 		<%= f.label :ジャンル %>
	 	 	<%= f.text_field :name %>
	 	 	<label><%= f.radio_button :is_enabled, "有効" ,checked: "checked"%> 有効 </label>
	 	 	<label><%= f.radio_button :is_enabled, "無効" %> 無効</label>
	 	 	<%= f.submit "追加", class: "btn btn-primary" %>
	 	<% end %>
	 </div>
	  <div class="row">
	  	<table class = "table table-hover">
	  		<thead>
	  			 <tr>
	  			 	<th>ジャンル</th>
	  			 	<th>状態</th>
	  			 	<th></th>
	  			 </tr>
	  		</thead>
	  		<tbody>
	  			 <% @genres.each do |genre| %>
	  			 <tr>
	  			 	<td><%= genre.name %> </td>
	  			 	<td><%= genre.is_enabled %></td>
	  			 	<td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-primary" %></td>
	  			 </tr>
	  			 <% end %>
	  		</tbody>
	  	</table>
	  </div>
</div>
<div class="container">
	 <div class="row">
	 	<h2>ジャンル一覧・追加</h2>

	 	<%= form_for @genre, url: admins_genres_path do |f| %>
	 		<%= f.label :ジャンル %>
	 	 	<%= f.text_field :name %>
	 	 	<%= f.submit "追加" %>
	 	<% end %>
	 </div>
	  <div class="row">
	  	<table class = "table table-hover">
	  		<thead>
	  			 <tr>
	  			 	<th>ジャンル</th>
	  			 	<th>状態</th>
	  			 	<th></th>
	  			 </tr>
	  		</thead>
	  		<tbody>
	  			 <% @genres.each do |genre| %>
	  			 <tr>
	  			 	<td><%= genre.name %> </td>
	  			 	<td></td>
	  			 	<td><%= link_to "編集する", edit_admins_genre_path(genre.id) %></td>
	  			 </tr>
	  			 <% end %>
	  		</tbody>
	  	</table>
	  </div>
</div>
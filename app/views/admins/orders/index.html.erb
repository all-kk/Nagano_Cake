<div class="container"z>
 <h2>注文履歴一覧</h2>
 <table class="table table-hover">
 	<thead>
 		<tr class="active">
 			 <th>購入日時</th>
 			 <th>購入者</th>
 			 <th>個数</th>
 			 <th>注文ステータス</th>
 		</tr>
 	</thead>
 	<tbody>
 		 <% @orders.each do |order| %>
 		<tr>
 			 <td><%= link_to order.created_at, admins_order_path(order), :style=>"color:black;" %></td>
 			 <td><%= order.member.last_name %></td>
 			 <td><%= order.order_details.sum(:number) %></td>
 			 <td><%= order.status %></td>
 		</tr>
 		<% end %>
 	</tbody>
 </table>
</div>
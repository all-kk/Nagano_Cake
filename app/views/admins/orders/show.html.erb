<div class="container">
	<h2>注文履歴詳細</h2>
	<div class="row">
		<div class="col-xs-12">
			<h4>購入者：<%= @order.member.last_name %></h4>
			<h4>配送先：<%= @order.address %></h4>
			<h4>支払方法：<%= @order.payment_method %></h4>
			<%= form_for @order, url: admins_order_path do |f| %>
			<h4>注文ステータス：<%= f.select :status,["入金待ち","入金確認","制作中","発送準備中","発送済み"] %>
				<%= f.submit "更新" ,class: "btn btn-primary btn-xs" %>
			</h4>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-9">
			<table class="table table-hover">
				<thead>
					<tr class="active">
						<th>商品名</th>
						<th>単価（税込）</th>
						<th>数量</th>
						<th>小計</th>
						<th>制作ステータス</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @order_details.each do |order_detail| %>
					<tr>
						<td><%= order_detail.product.name %></td>
						<td><%= order_detail.tax_price %></td>
						<td><%= order_detail.number %></td>
						<td><%= order_detail.product.price %></td>
						<%= form_for order_detail, url: admins_order_detail_path do |f| %>
						<td><%= f.select :work_status,["着手不可","制作待ち","制作中","制作完了"] %>
						</td>
						<td><%= f.submit "更新" ,class:"btn btn-primary btn-xs" %></td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-xs-3">
			<h4>商品合計：<%= @order.total_products_cost %></h4>
			<h4>送料：<%= @order.postage %></h4>
			<h4>請求金額合計：<%=(@order.total_products_cost)+(@order.postage) %></h4>
		</div>
	</div>
</div>
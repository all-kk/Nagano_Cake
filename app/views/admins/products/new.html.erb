<div class="container">
	<div class="row">
		<div class="col-xs-8">
			<%= form_for(@product, url: admins_products_path) do |f| %>
				<div>
				<%= f.label :商品名 %>
				<%= f.text_field :name %>
				</div>
				<div>
				<%= f.label :商品説明 %>
				<%= f.text_area :explanatory %>
				</div>
				<div>
					<%= f.label :ジャンル %>
					<%= f.collection_select :genre_id, Genre.all, :id, :name %>
				</div>
				<div>
				<%= f.label :税抜き価格 %>
				<%= f.text_field :price %>
				</div>
				<div>
				<%= f.submit "商品登録" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
<div class="container">
	<h2>商品編集</h2>
	<div class="row">
		<%= form_for(@product, url: admins_product_path) do |f| %>
		<div class="col-xs-4">
			<%= attachment_image_tag @product, :image, class: "img-square", fallback: "no_image.jpg", size:"200x200" %>
			  <%= f.attachment_field :image, placeholder: "商品画像" %>
		</div>
		<div class="col-xs-8">
				<div class="col-xs-12">
				<%= f.label :商品名,class: "col-xs-3" %>
				<%= f.text_field :name,class: "col-xs-8" %>
				</div>
				<div class="col-xs-12">
				<%= f.label :商品説明,class: "col-xs-3" %>
				<%= f.text_area :explanatory,class: "col-xs-8" %>
				</div>
				<div class="col-xs-12">
					<%= f.label :ジャンル,class: "col-xs-3 fix" %>
					<%= f.collection_select :genre_id, Genre.all, :id, :name %>
				</div>
				<div class="col-xs-12">
				<%= f.label :税抜き価格,class: "col-xs-3" %>
				<%= f.text_field :price,class: "col-xs-8" %>
				</div>
				<div class="col-xs-12">
				<%= f.label :販売ステータス,class: "col-xs-3" %>
				<%= f.select :is_capable,["販売中","販売停止中"] %>
				</div>
				<div class="col-xs-10"></div>
				<%= f.submit "商品登録" %>
		</div>
		<% end %>
	</div>
</div>
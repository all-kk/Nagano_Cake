<h3 style="margin-left: 300px;">会員の方はこちらからログイン</h3>
<div class="log_in_area" style="margin: 0px 400px">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" style="font-size: 20px;">
    <%= f.label :email, 'メールアドレス　　　' %><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field" style="font-size: 20px;">
    <%= f.label :password, 'パスワード　　　　　' %><%= f.password_field :password, autocomplete: "current-password" %>
  </div>
  <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %>

  <div class="actions" style="margin-left: 150px;">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>
<h4>登録がお済みでない方</h4>
<%= link_to "こちら", new_registration_path(resource_name) %><span>から新規登録を行なってください。</span>
</div>

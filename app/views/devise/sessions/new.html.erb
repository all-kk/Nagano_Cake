<h3 style="margin-left: 300px; font-family: HiraMinPro-W6;">会員の方はこちらからログイン</h3>
<div class="log_in_area" style="margin: 0px 400px">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<table class="table table-bordered">
<tr>
  <div class="field" style="font-size: 20px;">
    <th><%= f.label :email, 'メールアドレス' %></th>
    <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
    <th></th>
  </div>
</tr>
<tr>
  <div class="field" style="font-size: 20px;">
    <th><%= f.label :password, 'パスワード' %></th>
    <th><%= f.password_field :password, autocomplete: "current-password" %></th>
    <th><%= f.submit "ログイン", class: "btn btn-primary" %></th>
  </div>
</tr>
</table>
<%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %>
<% end %>
<h4>登録がお済みでない方</h4>
<%= link_to "こちら", new_registration_path(resource_name) %><span>から新規登録を行なってください。</span>
</div>

<div class="submit-area">
<h2 style="margin-left: 300px;">新規会員登録</h2>

<div class="sign_up-area" style="margin: 0px 400px;">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field"><br>
    <%= f.label :first_name, '名前　　　　　　　 姓　　' %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    <%= f.label :last_name, '名　' %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div><br>

  <div class="field">
    <%= f.label :first_name_phonetic, 'フリガナ　　　　    (セイ)　　' %><%= f.text_field :first_name_phonetic, autocomplete: "first_name_phonetic" %>
    <%= f.label :last_name_phonetic, '(メイ)　' %><%= f.text_field :last_name_phonetic, autocomplete: "last_name_phonetic" %>
  </div><br>


  <div class="field">
      <%= f.label :email, 'メールアドレス　　　　　　' %><%= f.email_field :email, autofocus: true, class: "email" %>
  </div><br>

  <div class="field">
      <%= f.label :postcode, '郵便番号　　　　　　　　　' %><%= f.text_field :postcode, autocomplete: 'postcode'%>
  </div><br>

  <div class="field">
      <%= f.label :address, '住所　　　　　  　　　　　　' %><%= f.text_field :address, autocomplete: 'address' %>
  </div><br>

  <div class="field">
      <%= f.label :telephone_number, '電話番号　　　　　　　　　' %><%= f.text_field :telephone_number, autocomplete: 'telephone_number' %>
  </div><br>

  
  <div class="field">
    <%= f.label :password, 'パスワード(6文字以上)　　　' %>
    <% if @minimum_password_length %>
    <% end %><%= f.password_field :password, autocomplete: "new-password" %>
  </div><br>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード(確認用)　　　　　' %><%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions" style="margin-left: 200px;">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>
<h4>既に会員の方は</h4>
 <%= link_to "こちら", new_session_path(resource_name) %><span>からログインしてください。</span>
</div>
</div>

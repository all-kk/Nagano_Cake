<div class="container">
	<div class="row">
		<h2 class="col-xs-10" style="font-family: HiraMinPro-W6;">注文商品一覧</h2>

		</div>
	<div class="row">
		<table class="table table-bordered">
			<tr>
				<th class="col-xs-1">注文日</th>
				<th class="col-xs-5">配送先</th>
				<th class="col-xs-2">注文商品</th>
				<th class="col-xs-1">支払い金額</th>
				<th class="col-xs-1">ステータス</th>
				<th class="col-xs-3">注文詳細</th>
		<% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.address %></td>
        <td><% order.order_details.each do |order_detail| %>
        	<%= order_detail.product.name %><br>
        	<% end %>
        </td>
        <td><%= order.total_products_cost+800 %></td>
        <td><%= order.status %></td>
        <td><div class="button_wrapper"><%= link_to "表示する", member_order_path(order), class: "btn btn-primary" %></td>
        <%end%>


<div class="container">
	<div class="row">
		<h2 class="col-xs-10">ショッピングカート</h2>
		<div class="col-xs-2 btn-lg"><%= link_to "カートを空にする", member_cart_items_destroy_all_path(@cart_items), method: :delete, class:"btn btn-danger" %></div>
	</div>
	<div class="row">
		<table class="table table-bordered">
			<tr>
				<th class="col-xs-5">商品名</th>
				<th class="col-xs-2">単価（税込）</th>
				<th class="col-xs-3">数量</th>
				<th class="col-xs-1">小計</th>
				<th class="col-xs-1"></th>
			</tr>
			<% @cart_items.each do |cart_item| %>
			<tr>
				<td class="col-xs-5"><%= link_to member_product_path(cart_item.product_id) do %>
					<%= attachment_image_tag cart_item.product, :image, size: "50x50", fallback: "no_image.jpg"%><%= cart_item.product.name %>
					<% end %>
				</td>
				<td class="col-xs-2"><%= (cart_item.product.price*1.1).round %></td>
				<td class="col-xs-3">
					<%= form_for cart_item, url: member_cart_item_path(cart_item) do |f| %>
					<%= f.number_field :number, min:1 %>　　<%= f.submit "更新" ,class:"btn btn-primary btn-xs" %>
					<% end %>
				</td>
				<td class="col-xs-1"><%= ((cart_item.product.price*1.1).round*cart_item.number) %>
					<% @total += ((cart_item.product.price*1.1).round*cart_item.number) %>
				</td>
				<td class="col-xs-1">
					<%= link_to "Destroy", member_cart_item_path(cart_item), method: :delete, class:"btn btn-danger" %>
				</td>
			</tr>
		<% end %>
	</table>
	</div>
	<div class="row">
		<div class="col-xs-9">
			<%= link_to "買い物を続ける", member_products_path, class:"btn btn-primary" %>
		</div>
	     <h2 class="col-xs-3">合計金額　<%= @total %>円
	     </h2>
     </div>
     <div class="row">
     	<div class="col-xs-5"></div>
     	<div class="col-xs-4">
      <%= link_to "情報入力に進む", new_member_order_path,class: "btn btn-success btn-lg" %>
    	</div>
    </div>
</div>